<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>ticket</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <servlet-class>fr.eni.servlets.TicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FactureServlet</servlet-name>
        <servlet-class>fr.eni.servlets.FactureServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FactureServlet</servlet-name>
        <url-pattern>/facture</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReglementServlet</servlet-name>
        <servlet-class>fr.eni.servlets.ReglementServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReglementServlet</servlet-name>
        <url-pattern>/reglement</url-pattern>
    </servlet-mapping>

</web-app>